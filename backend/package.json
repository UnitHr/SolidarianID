{
  "name": "api-gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:api-gateway": "nest build api-gateway",
    "build:users-ms": "nest build users-ms",
    "build:communities-ms": "nest build communities-ms",
    "build:statistics-ms": "nest build statistics-ms",
    "start:dev:api-gateway": "cross-env NODE_ENV=development nest start api-gateway --watch",
    "start:dev:users-ms": "cross-env NODE_ENV=development nest start users-ms --watch",
    "start:dev:communities-ms": "cross-env NODE_ENV=development nest start communities-ms --watch",
    "start:dev:statistics-ms": "cross-env NODE_ENV=development nest start statistics-ms --watch",
    "start:prod:api-gateway": "cross-env NODE_ENV=production node dist/apps/api-gateway/main",
    "start:prod:users-ms": "cross-env NODE_ENV=production node dist/apps/users-ms/main",
    "start:prod:communities-ms": "cross-env NODE_ENV=production node dist/apps/communities-ms/main",
    "start:prod:statistics-ms": "cross-env NODE_ENV=production node dist/apps/statistics-ms/main",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./apps/api-gateway/test/jest-e2e.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --write \"{apps,libs}/**/src/**/*.ts\"",
    "prettier:check": "prettier --check \"{apps,libs}/**/src/**/*.ts\"",
    "insert:users": "npx ts-node scripts/seed-users.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.17",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.17",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.17",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.17",
    "@nestjs/swagger": "^11.1.3",
    "@nestjs/typeorm": "^11.0.0",
    "@types/express": "^5.0.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cassandra-driver": "^4.7.2",
    "cassandra-for-nest": "^1.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.2",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.8.1",
    "mysql2": "^3.11.3",
    "nest-neo4j": "^0.3.1",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "shallow-equal-object": "^1.1.1",
    "sqlite3": "^5.1.7",
    "stryker-cli": "^1.0.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.0.17",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-github": "^1.1.12",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@api-gateway/(.*)$": "<rootDir>/apps/api-gateway/src/$1",
      "^@communities-ms/(.*)$": "<rootDir>/apps/communities-ms/src/$1",
      "^@statistics-ms/(.*)$": "<rootDir>/apps/statistics-ms/src/$1",
      "^@gateway-ms/(.*)$": "<rootDir>/apps/gateway-ms/src/$1",
      "^@users-ms/(.*)$": "<rootDir>/apps/users-ms/src/$1",
      "^@common-lib/common-lib/(.*)$": "<rootDir>/libs/common-lib/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/apps/**/test/**/*.(spec|test).ts",
      "<rootDir>/libs/**/test/**/*.(spec|test).ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "apps/*/src/**/*.ts",
      "libs/*/src/**/*.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "rootDir": ".",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  }
}
