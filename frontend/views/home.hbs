{{! views/home.hbs }}
<section class='text-center py-10'>
  <h1 class='text-4xl font-extrabold text-gray-800 mb-4'>
    Welcome to SolidarianID
  </h1>
  <p class='text-lg text-gray-600 mb-6'>
    Explore communities, support causes, and participate in charitable actions.
  </p>
</section>

<section class='container mx-auto px-4 py-16 text-center'>
  <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
    <div class='card group relative p-8 bg-white rounded-lg shadow-lg transform transition-transform hover:scale-105'>
      <h2 class='text-2xl font-bold mb-4 text-gray-800 animate-slideUp'>
        Explore Communities
      </h2>
      <p class='text-gray-600 mb-6'>
        Join communities with common interests and collaborate on charitable
        actions.
      </p>
      <a class='bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700'>
        View Communities
      </a>
    </div>

    <div class='card group relative p-8 bg-white rounded-lg shadow-lg transform transition-transform hover:scale-105'>
      <h2 class='text-2xl font-bold mb-4 text-gray-800 animate-slideUp'>
        Support Causes
      </h2>
      <p class='text-gray-600 mb-6'>
        Discover causes that need your support and help make a difference.
      </p>
      <a class='bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700'>
        View Causes
      </a>
    </div>

    <div class='card group relative p-8 bg-white rounded-lg shadow-lg transform transition-transform hover:scale-105'>
      <h2 class='text-2xl font-bold mb-4 text-gray-800 animate-slideUp'>
        Contribute Now
      </h2>
      <p class='text-gray-600 mb-6'>
        Register to create communities and actively participate in charitable
        actions.
      </p>
      <a href='/register' class='bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700'>
        Register
      </a>
    </div>
  </div>
</section>